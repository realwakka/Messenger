<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.realwakka.messenger.LockActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter the password"
            android:id="@+id/textView4" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="50dp">
        <EditText
            android:id="@+id/lock_edit0"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/lock_edit1"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/lock_edit2"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/lock_edit3"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/lock_button1"
                android:text="1"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button2"
                android:text="2"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button3"
                android:text="3"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/lock_button4"
                android:text="4"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button5"
                android:text="5"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button6"
                android:text="6"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/lock_button7"
                android:text="7"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button8"
                android:text="8"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button9"
                android:text="9"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:text="1"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button0"
                android:text="0"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/lock_button10"
                android:text="DEL"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
